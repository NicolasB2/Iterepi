<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
    </style>

    <!-- Para todos los botones contained de la aplicacion-->
    <style name="button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/primaryColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <!--Para aquellos textos que pueden realizar una accion. -->
    <style name="textButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/thirdTextColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Aquellos que no resaltan dentro de ciertas opciones -->
    <style name="textButtonSecondary" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/thirdTextColor</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Para botones que tienen iconos-->
    <style name="iconButton" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:backgroundTint">@color/primaryColor</item>
        <item name="iconSize">24dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="textFieldNormal" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="hintTextColor">@color/primaryDarkColor</item>
        <item name="boxStrokeColor">@color/primaryDarkColor</item>
    </style>


</resources>
